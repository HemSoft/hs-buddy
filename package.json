{
  "name": "@hemsoft/buddy",
  "private": true,
  "version": "0.1.13",
  "description": "Your universal productivity companion - manage skills, tasks, and workflows",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "bun run bump && tsc && vite build && electron-builder",
    "bump": "bun scripts/bump-revision.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,css}\"",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "convex:codegen": "convex codegen",
    "validate:github": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/validate-github-orgs.ps1",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "productivity",
    "automation",
    "skills",
    "companion"
  ],
  "author": "HemSoft Developments",
  "license": "MIT",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "@github/copilot-win32-x64": "^0.0.406",
    "@monaco-editor/react": "^4.7.0",
    "@octokit/graphql": "^9.0.3",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^22.0.1",
    "@uiw/react-markdown-preview": "^5.1.5",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "allotment": "^1.20.5",
    "convex": "^1.31.7",
    "cron-parser": "^5.5.0",
    "electron-store": "^11.0.2",
    "electron-window-state": "^5.0.3",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-complex-tree": "^2.6.1",
    "react-dom": "^18.2.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.4.2",
    "sharp": "^0.34.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.2.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ],
    "*.md": [
      "markdownlint-cli2"
    ]
  }
}
